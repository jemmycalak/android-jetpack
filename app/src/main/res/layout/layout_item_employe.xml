<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  app:cardUseCompatPadding="true"
  android:id="@+id/layout">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingSmall">

    <ImageView
      android:id="@+id/img_employe"
      android:layout_width="@dimen/sizeIconMenu"
      android:layout_height="@dimen/sizeIconMenu"
      android:scaleType="centerCrop"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginRight="@dimen/marginLarge"/>

    <TextView
      android:id="@+id/name_employe"
      android:text="Jemmy Sapta Anuary"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:layout_marginLeft="@dimen/marginSmall"
      app:layout_constraintLeft_toRightOf="@+id/img_employe"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
    <TextView
      android:id="@+id/notelp_employe"
      android:text="082269219485"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/marginSmall"
      app:layout_constraintLeft_toRightOf="@+id/img_employe"
      app:layout_constraintTop_toBottomOf="@+id/name_employe"/>
    <TextView
      android:id="@+id/email_employe"
      android:text="jemmy.sapta14@gmail.com"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/marginSmall"
      app:layout_constraintLeft_toRightOf="@+id/img_employe"
      app:layout_constraintTop_toBottomOf="@+id/notelp_employe"/>
    <TextView
      android:id="@+id/company_employe"
      android:text="Tokomodal Mitra Usaha"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:layout_marginLeft="@dimen/marginSmall"
      app:layout_constraintLeft_toRightOf="@+id/img_employe"
      app:layout_constraintTop_toBottomOf="@+id/email_employe"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>